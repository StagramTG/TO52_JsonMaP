<Window x:Class="JsonMap_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JsonMap_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnChooseFile" Content="Choisir un fichier" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" Click="OpenChooseFileDialog"/>
        <Button x:Name="btnPauseSim" Content="Pause" HorizontalAlignment="Left" Margin="10,366,0,0" VerticalAlignment="Top" Width="150" IsEnabled="False"/>
        <Button x:Name="btnStopSim" Content="Arrêter la simulation" HorizontalAlignment="Left" Margin="10,391,0,0" VerticalAlignment="Top" Width="150" IsEnabled="False"/>
        <Button x:Name="btnLaunchSim" Content="Lancer la simulation" HorizontalAlignment="Left" Margin="10,342,0,0" VerticalAlignment="Top" Width="150" IsEnabled="False"/>
        <TextBox x:Name="inFilePath" HorizontalAlignment="Left" Height="20" Margin="184,10,0,0" TextWrapping="Wrap" Text="Chemin" VerticalAlignment="Top" Width="599"/>

    </Grid>
</Window>
